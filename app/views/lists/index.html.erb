</div>

  <div class="row row-cols-4">
    <% @lists.each do |list| %>
    <div class="col">
    <div class="list-cards">
      <div class="list-img" style="background-image: linear-gradient(#ffffff85, #ffffff30), url(https://st4.depositphotos.com/1001941/20761/v/450/depositphotos_207614424-stock-illustration-cinema-movie-concept-based-poster.jpg);">
          <div class="list-card">
          <%# trash icon link %>
            <%= link_to list_path(list), class: 'nav-btn', data: { turbo_method: :delete } do %>
            <i class="fa-solid fa-trash-can"></i>
            <% end %>
            <li id="list-link"><%= link_to list.name, list_path(list) %></li>
          </div>
        </div>
    </div>
    </div>
    <% end %>
  </div>
</div>

